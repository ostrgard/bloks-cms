{
  "name": "bloks-cms",
  "version": "1.0.0",
  "description": "Bloks CMS",
  "main": "index.js",
  "scripts": {
    "build": "webpack --verbose --colors --display-error-details --config webpack/prod.config.js",
    "start": "concurrent --kill-others \"better-npm-run start-prod\" \"better-npm-run start-api-prod\"",
    "dev": "concurrent --kill-others \"better-npm-run watch-client\" \"better-npm-run start-dev\"",
    "dev-api": "better-npm-run start-api-dev",
    "lint": "eslint -c .eslintrc interface; eslint -c .eslintrc api"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./interface",
        "NODE_ENV": "production"
      }
    },
    "start-dev": {
      "command": "node ./bin/server.js",
      "env": {
        "NODE_PATH": "./interface",
        "NODE_ENV": "development",
        "NODE_TLS_REJECT_UNAUTHORIZED": 0
      }
    },
    "start-api-prod": {
      "command": "node ./bin/api.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-api-dev": {
      "command": "nodemon ./bin/api.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "watch-client": {
      "command": "node webpack/webpack-dev-server.js",
      "env": {
        "NODE_PATH": "./interface",
        "UV_THREADPOOL_SIZE": 100
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ostrgard/bloks-cms.git"
  },
  "author": "Søren Østergaard <soeren-oestergaard@protonmail.com>",
  "license": "ISC",
  "dependencies": {
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "react-router-redux": "^3.0.0",
    "redux": "^3.5.2",
    "redux-connect": "^2.4.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.1.0",
    "axios": "^0.15.3",
    "babel": "~5.8.29",
    "babel-core": "~5.8.33",
    "babel-eslint": "^4.1.3",
    "babel-loader": "~5.3.3",
    "babel-plugin-react-transform": "~1.1.1",
    "babel-runtime": "~5.8.29",
    "better-npm-run": "^0.0.4",
    "body-parser": "^1.15.2",
    "clean-webpack-plugin": "^0.1.6",
    "compression": "^1.6.0",
    "concurrently": "^0.1.1",
    "css-loader": "^0.23.1",
    "eslint": "1.10.3",
    "eslint-config-airbnb": "0.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^0.8.0",
    "eslint-plugin-react": "^3.5.0",
    "execSync": "^1.0.2",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^0.9.1",
    "generate-key": "0.0.6",
    "json-loader": "^0.5.4",
    "kcors": "^2.2.1",
    "koa": "^2.2.0",
    "koa-router": "^7.1.1",
    "mongoose": "^4.8.5",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "piping": "^0.3.0",
    "pretty-error": "^1.2.0",
    "prompt": "^1.0.0",
    "react-a11y": "^0.2.6",
    "react-addons-test-utils": "15.0.1",
    "react-transform-catch-errors": "1.0.0",
    "react-transform-hmr": "1.0.1",
    "redbox-react": "1.1.1",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "request": "^2.79.0",
    "sass-loader": "^3.1.2",
    "serialize-javascript": "^1.1.2",
    "serve-favicon": "^2.3.0",
    "strip-loader": "^0.1.0",
    "style-loader": "^0.13.0",
    "superagent": "^1.4.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.5.0",
    "webpack-isomorphic-tools": "^2.2.18"
  }
}
